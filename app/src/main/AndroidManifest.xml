<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.funcoding.wanandroid.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WanApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.WanAndroid"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/Theme.WanAndroid.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.account.AccountActivity"
            android:theme="@style/Theme.WanAndroid.NoActionBar" />

        <activity
            android:name=".ui.web.WebActivity"
            android:theme="@style/Theme.WanAndroid.NoActionBar" />

        <activity
            android:name=".ui.mine.MineActivity"
            android:theme="@style/Theme.WanAndroid.NoActionBar" />

        <activity
            android:name=".ui.mine.SettingActivity"
            android:theme="@style/Theme.WanAndroid.NoActionBar" />

        <activity
            android:name=".ui.search.SearchActivity"
            android:theme="@style/Theme.WanAndroid.NoActionBar" />
    </application>

</manifest>